<%- include('../partials/header') %>
<section>
    <div>Brand:</div>
    <div><%= beauty.brandName %> </div>
    <div>Product:</div>
    <div><%= beauty.productName %> </div>
    <div>Category:</div>
    <div><%= beauty.category %> </div>
    <div>Price:</div>
    <div><%= beauty.price %> </div>
    <div>Location:</div>
    <div><%= beauty.location %> </div>
</section>


<h2>Beauty Reviews</h2>

<form method="POST" action="/beauties/<%= beauty._id %>/reviews">
    <label>Review</label>
    <textarea name="content"></textarea>
    <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <input type="submit" value="Add Beauty Review">
</form>



<% if (beauty.note.length) {%>
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Note</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        <% beauty.note.forEach(function(r) { %>
        <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %> </td>
            <td><%= r.rating %> </td>
        </tr>
        <% }); %>
    </tbody>
</table>
<% } else { %>
<h4> No Comments yet</h4>
<% } %>


<%- include('../partials/footer') %>