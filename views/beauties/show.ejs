<%- include('../partials/header') %>
<div class="info">
    <section>
        <p>Brand:</p>
        <p><%= beauty.brandName %> </p>
        <p>Product:</p>
        <p><%= beauty.productName %> </p>
    </section>

</div>

<h2>Add a note about your secret here</h2>

<div class="note">
    <form method="POST" action="/beauties/<%= beauty._id %>/notes">
        <label>Note</label>
        <textarea name="content"></textarea>
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <input type="submit" value="Add A New Note">
    </form>

</div>




<% if (beauty.notes.length) {%>
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Note</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        <% beauty.notes.forEach(function(r) { %>
        <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %> </td>
            <td><%= r.rating %> </td>
        </tr>
        <% }); %>
    </tbody>
</table>
<% } else { %>
<h4> No notes</h4>
<% } %>


<%- include('../partials/footer') %>